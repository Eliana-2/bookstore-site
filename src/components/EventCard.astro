---
import LinkButton from './LinkButton.astro'
const {title, date, summary, image, slug} = Astro.props;
---

<section>
  <img src={image} alt="">
  <div class="content">
    <h2>{title}</h2>
    <p>{date}</p>
    <p class="summary">{summary}</p>
    <LinkButton href={slug}>Details</LinkButton>
  </div>
</section>


<style>
  img {
    width: 50%;
    object-fit: cover;
  }

  section {
    margin: 3rem;
    outline: 1px solid black;
    display: flex;
    min-width: 300px;
    max-width: 450px;
    height: 300px;
  }

  .content {
    gap: 0.5rem;
    padding: 1rem 1rem 2rem 1rem;
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .summary {
    margin-bottom: auto;
  }

  @media (max-width: 700px) {
    img,
    .content {
      width: 100%;
    }

    section {
      flex-direction: column;
      height: auto;
    }
  }
</style>
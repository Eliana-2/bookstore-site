---
import LinkButton from './LinkButton.astro';
const {img, heading, text, isLeft=false, hasContact=false} = Astro.props;
---

<section class:list={{left: isLeft}}>
  <img src={img} alt="">
  <div class:list={["text", {contact: hasContact}]}>
    <h2>{heading}</h2>
    <p class:list={{margin: hasContact}}>{text}</p>
    {hasContact && <LinkButton>Visit Us</LinkButton>}
  </div>
</section>

<style>
  section {
    width: 100%;
    max-width: 1000px;
    border: 1px solid black;
    box-shadow: 4px 4px 4px rgb(0 0 0 / 20%);
    display: flex;
    gap: 0.5rem;
    background-color: white;
    border-radius: 5px;
  }
  .left {
    flex-direction: row-reverse;
  }
  img {
    width: 50%;
    height: auto;
    border-radius: 5px 0 0 5px;
  }
  .left img {
    border-radius: 0 5px 5px 0;
  }
  .text {
    padding: 1rem;
    width: 50%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  .contact {
    padding-bottom: 3rem;
  }
  h2 {
    text-align: center;
  }
  .margin {
    margin-bottom: auto;
  }
  @media (max-width: 800px) {
    section, .left {
      flex-direction: column;
      align-items: center;
    }
    img, .left img {
      width: 100%;
      border-radius: 0;
    }
    .text {
      width: auto;
    }
    .contact {
      padding-bottom: 2rem;
    }
  }
  @media (max-width: 400px) {
    section {
      border: none;
      box-shadow: none;
      padding: 1.5rem;
    }
    .text {
      padding: 0;
    }
  }
</style>
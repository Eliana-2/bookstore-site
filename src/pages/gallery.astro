---
import Layout from '../layouts/Layout.astro';
import {Image} from 'astro:assets'
---

<Layout title="Haven Bookstore Gallery">
  <main>
    <h1>Gallery</h1>
    <div class="gallery">
      <Image src="/bookstore-site/gallery1.jpg" alt="" width="1920" height="1272"></Image>
      <Image src="/bookstore-site/gallery2.jpg" alt="" width="1920" height="729"></Image>
      <Image src="/bookstore-site/gallery3.jpg" alt="" width="1920" height="1080"></Image>
      <Image src="/bookstore-site/gallery4.jpg" alt="" width="1920" height="1280"></Image>
      <Image src="/bookstore-site/gallery5.jpg" alt="" width="1920" height="1439"></Image>
      <Image src="/bookstore-site/gallery6.jpg" alt="" width="1920" height="1282"></Image>
      <Image src="/bookstore-site/gallery7.jpg" alt="" width="1280" height="1920"></Image>
      <Image src="/bookstore-site/gallery8.jpg" alt="" width="1920" height="1439"></Image>
    </div>
    
  </main>
</Layout>

<style>
    h1 {
    margin-block: 2.5rem;
    color: var(--orange);
    text-align: center;
  }

  img {
    width: 100%;
    max-width: 100%;
    height: 100%;
    max-height: 100%;
    display: block;
    margin: 0;
    margin-bottom: 10px;
  }

  .gallery {
    column-count: 4;
    column-gap: 10px;
    margin-block: var(--padding-large)
  }

  @media (max-width: 1200px) {
    .gallery {
      column-count: 3;
    }
  }

  @media (max-width: 800px) {
    .gallery {
      column-count: 2;
    }
  }

  @media (max-width: 400px) {
    .gallery {
      column-count: 1;
    }
  }

</style>
